@model StudentInfo
@{
    ViewData["Title"] = "Student Employee Form";
}

<h2>Enter Student Employee's Information:</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="EmpID" />

    <label asp-for="FirstName">First Name:</label>
    <input type="text" asp-for="FirstName" /><br /><br />

    <label asp-for="LastName">Last Name:</label>
    <input type="text" asp-for="LastName" /><br /><br />

    <fieldset>
        <legend>International Student?</legend>

        <div>
            <input type="checkbox" id="internationalFalse" name="internationalFalse" checked>
            <label for="false">No</label>
        </div>

        <div>
            <input type="checkbox" id="internationalTrue" name="internationalTrue">
            <label for="true">Yes</label>
        </div>
    </fieldset><br /><br />

    <label asp-for="Gender">Gender:</label>
    <input type="text" asp-for="Gender" /><br /><br />

    <label asp-for="Email">Email:</label>
    <input type="text" asp-for="Email" /><br /><br />

    <label asp-for="ExpectedHours">Expected Total Hours Per Week:</label>
    <input type="number" asp-for="ExpectedHours" /><br /><br />

    <label asp-for="BowlerZip">Zip Code:</label>
    <input type="text" asp-for="BowlerZip" /><br /><br />

    <label asp-for="BowlerPhoneNumber">Phone Number:</label>
    <input type="text" asp-for="BowlerPhoneNumber" /><br /><br />

    <select class="form-select" asp-for="TeamID">
        <option value="">Select a Team</option>
        @foreach (Team t in ViewBag.Teams)
        {
            <option value="@t.TeamID">@t.TeamName</option>
        }
    </select>
    <br /><br />

    <button class="btn btn-sm btn-info" type="submit">Save</button>
</form>
